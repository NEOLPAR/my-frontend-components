/*Reset CSS with git.io/normalize*/
@import "normalize.css"

/*The default resolution is < 480px*/

/*Container center the page's content. Width properties of the media querys are fixed.*/
.container
	width 100%
	margin 0px auto
	.span1,.span2,.span3,.span4,.span5,.span6,
	.span7,.span8,.span9,.span10,.span11,.span12
		width 100%

	/*There is not a row control. We complete the row with right and left offsets.
	In this case is zero because in the resolution <480 .container .spanX are 100%.
	If we want cols in default resolution, we will use .percent-container .spanX or .colX.*/
	.right-offset1,.right-offset2,.right-offset3,.right-offset4,.right-offset5,
	.right-offset6,.right-offset7,.right-offset8,.right-offset9,.right-offset10,
	.right-offset11
		margin-right 0px
	.left-offset1,.left-offset2,.left-offset3,.left-offset4,.left-offset5,
	.left-offset6,.left-offset7,.left-offset8,.left-offset9,.left-offset10,
	.left-offset11
		margin-left 0px

/*If we want a full screen page, we will use this container.
Also we can use this container to create cols in a concrete spanX.*/
.percent-container
	width 100%
	margin 0px
	.span10
		width 100%
	.span9
		width 90%
	.span8
		width 80%
	.span7
		width 70%
	.span6
		width 60%
	.span5
		width 50%
	.span4
		width 40%
	.span3
		width 30%
	.span2
		width 20%
	.span1
		width 10%
	.left-offset9
		margin-left 90%
	.left-offset8
		margin-left 80%
	.left-offset7
		margin-left 70%
	.left-offset6
		margin-left 60%
	.left-offset5
		margin-left 50%
	.left-offset4
		margin-left 40%
	.left-offset3
		margin-left 30%
	.left-offset2
		margin-left 20%
	.left-offset1
		margin-left 10%
	.right-offset9
		margin-right 90%
	.right-offset8
		margin-right 80%
	.right-offset7
		margin-right 70%
	.right-offset6
		margin-right 60%
	.right-offset5
		margin-right 50%
	.right-offset4
		margin-right 40%
	.right-offset3
		margin-right 30%
	.right-offset2
		margin-right 20%
	.right-offset1
		margin-right 10%

/*The easiest way to create the most usefull cols.*/
.container, .percent-container
	.span1,.span2,.span3,.span4,.span5,.span6,
	.span7,.span8,.span9,.span10,.span11,.span12
		.col2
			width 50%
		.col3
			width 33.33%
		.col4
			width 25%

.container,.percent-container,
.span1,.span2,.span3,.span4,.span5,.span6,
.span7,.span8,.span9,.span10,.span11,.span12,
.col2,.col3,.col4
	-webkit-word-wrap break-word
	-moz-word-wrap break-word
	-ms-word-wrap break-word
	-o-word-wrap break-word
	word-wrap break-word
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	-ms-box-sizing border-box
	-o-box-sizing border-box
	box-sizing border-box

.span1,.span2,.span3,.span4,.span5,.span6,
.span7,.span8,.span9,.span10,.span11,.span12,
.col2,.col3,.col4
	float left

/*Classes for showing and hiding content by device via media query.*/
.visible-xxs,.hidden-xs,.hidden-sm,.hidden-md,.hidden-lg
	display block
.visible-xs,.visible-sm,.visible-md,.visible-lg,.hidden-xxs
	display none

